{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["es6", "dom", "es2015"],
		"module": "commonjs",

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,

		"paths": {
			"@handlers/*": ["./src/handlers/*"],
			"@utils/*": ["./src/utils/*"]
		},

		"outDir": "./dist",
		"rootDir": "./src"
	}
}
